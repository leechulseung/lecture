<link href="/assets/session_signup.css" rel="stylesheet">
<section class="section_signup">
  <div class="d-flex justify-content-center align-items-center signup_height">
    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
    
        <div class="form-group field row">
          <%= f.label :email, class: 'font-color' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      
        <div class="form-group field row">
          <%= f.label :password, class: 'font-color' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <div class="form-group field row">
          <%= f.label :nickname, class: 'font-color' %>
          <%= f.text_field :nickname, autocomplete: "off", class: 'form-control' %>
        </div>
        
        <div class="form-group field row">
          <%= f.label :number, class: 'font-color' %>
          <%= f.number_field :number, autocomplete: "off", class: 'form-control' %>
        </div>
        
        <div class="form-group field row">
          <%= f.label :major, class: 'font-color' %>
          <%= f.text_field :major, autocomplete: "off", class: 'form-control' %>
        </div>
        
        <div class="form-group field row">
          <%= f.label :job, class: 'font-color' %>
          <%= f.select :job, [["학생", "학생"], ["교수", "교수"]], { class: "selectpicker" } %>
          <%= f.radio_button :job, 0, label: "Novice", inline: true %>
          <%= f.radio_button :job, 1, label: "Intermediate", inline: true %>
          <%= f.radio_button :job, 2, label: "Advanced", inline: true %>
        </div>
      
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-outline-secondary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</section>